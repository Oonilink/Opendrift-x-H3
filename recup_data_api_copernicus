
from dotenv import load_dotenv
import os
import copernicusmarine

load_dotenv()

os.environ["COPERNICUSMARINE_USERNAME"] = os.getenv("COPERNICUS_USERNAME")
os.environ["COPERNICUSMARINE_PASSWORD"] = os.getenv("COPERNICUS_PASSWORD")



copernicusmarine.subset(
    dataset_id="cmems_mod_glo_phy_my_0.083deg_P1D-m",  # dataset avec courants
    variables=["uo", "vo"],                          # on ne prend que les courants
    minimum_longitude=-9.0,
    maximum_longitude=3.5,
    minimum_latitude=43.0,
    maximum_latitude=52.5,
    start_datetime="2024-12-01",
    end_datetime="2024-12-02",
    minimum_depth=0,          # surface
    maximum_depth=5,          # pr√®s de surface
    output_filename="courants_manche_atl.nc",
    output_directory="data_copernicus"
)